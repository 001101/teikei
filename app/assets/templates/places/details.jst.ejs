<h3 class="title"><%= name %></h3>
<span class="city"><%= city %></span>
<% if (ownedByCurrentUser()) {  %>
<button href="places/<%= id %>/edit" title="Eintrag editieren" id="edit-place" class="button edit">Editieren</button>
<% } %>
<% if (type === "Farm") { %>
<em> – Solidarische Landwirtschaft seit <%= Backbone.Form.editors.Date.monthNames[founded_at_month - 1] %> <%= founded_at_year %></em>
<% } %>

<dl class="tabs">
  <dd class="active">
    <a href="#info" id="info-tab">Allgemeines</a>
  </dd>

  <% if (type == "Farm") { %>
    <dd>
      <a href="#membership" id="membership-tab">Mitgliedschaft</a>
    </dd>
  <% } %>

  <dd>
    <a href="#contact" id="contact-tab">Kontakt aufnehmen</a>
  </dd>
</dl>

<ul class="tabs-content">
  <li class="active" id="info">

    <div class="membership-info">
      <% if (accepts_new_members == "yes") { %>
        <em>Wir nehmen neue Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "no") { %>
        <em>Wir nehmen derzeit keine neuen Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "waitlist") { %>
        <em>Wir nehmen neue Mitglieder auf! (Warteliste)</em>
      <% } %>
      <% if (type == "Farm") { %>
        <a class="call-to-action" href="#">Informationen zur Mitgliedschaft</a>
      <% } %>
    </div>

    <p><%= description %></p>

    <% if (type == "Farm") { %>

      <% if (vegetable_products !== undefined && vegetable_products.length > 0) { %>
        <h4>Pflanzliche Produkte</h4>
        <ul>
        <% var translatedVegetableProducts = Teikei.Util.translateVegetableProducts(vegetable_products); %>
        <% _.each(translatedVegetableProducts, function(product) { %>
          <li class="<%= product %> vegetable"><%= product %></li>
        <% }); %>
        </ul>
      <% } %>

      <% if (animal_products !== undefined && animal_products.length > 0) { %>
        <h4>Tierische Produkte</h4>
        <ul>
        <% var translatedAnimalProducts = Teikei.Util.translateAnimalProducts(animal_products); %>
        <% _.each(translatedAnimalProducts, function(product) { %>
          <li class="<%= product %> animal"><%= product %></li>
        <% }); %>
        </ul>
      <% } %>

      <% if (beverages !== undefined && beverages.length > 0) { %>
        <h4>Getränke</h4>
        <ul>
        <% var translatedBeverages = Teikei.Util.translateBeverages(beverages); %>
        <% _.each(translatedBeverages, function(product) { %>
          <li class="<%= product %> beverage"><%= product %></li>
        <% }); %>
        </ul>
      <% } %>

      <% if (additional_product_information !== undefined) { %>
        <h4>Zusätzliche Informationen zum Lebensmittelangebot</h4>
        <p><%= additional_product_information %></p>
      <% } %>

      <% if (acts_ecological || economical_behavior !== undefined) { %>
        <h4>Wirtschaftsweise</h4>
        <ul>
      <% } %>
      <% if (acts_ecological) { %>
        <li>Dieser Hof wirtschaftet ökologisch.</li>
      <% } %>
      <% if (economical_behavior !== undefined) { %>
        <li><%= economical_behavior %></li>
      <% } %>
      <% if (acts_ecological || economical_behavior !== undefined) { %>
        </ul>
      <% } %>

      <% if (places.length > 0) { %>
        <hr/>
        <h4>Verknüpfte Gruppen oder andere Höfe</h4>
        <ul>
          <% _.each(places, function(item) { p = item.place; %>
            <% if (p.type == "Depot") { %>
              <li class="depot">
            <% } if (p.type == "Farm") { %>
              <li class="farm">
            <% } %>
            <a href="#places/<%= p.id %>/details" title="<%= p.name %>"><%= p.name %></a></li>
          <% }); %>
        </ul>
      <% } %>

    <% } %>


    <% if (type == "Depot") { %>
      <% var farms = placesFilteredByType(places, "Farm"); %>
      <% if (farms.length > 0) { %>
        <hr/>
        <h4>Produkte</h4>
        <ul>
        <% _.each(farms, function(item) { var farm = item.place; %>
          <% var translatedProducts = Teikei.Util.translateProductsForFarm(farm); %>
          <% if (translatedProducts.length > 0) { %>
            <li><%= translatedProducts.join(", ") %>
              (<a href="#places/<%= farm.id %>/details" title="<%= farm.name %>"><%= farm.name %></a>)
            </li>
          <% } %>
        <% }); %>
        </ul>
      <% } %>
    <% } %>
  </li>

  <% if (type == "Farm") { %>
    <li id="membership">
          <div class="membership-info">
      <% if (accepts_new_members == "yes") { %>
        <em>Wir nehmen neue Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "no") { %>
        <em>Wir nehmen derzeit keine neuen Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "waitlist") { %>
        <em>Wir nehmen neue Mitglieder auf! (Warteliste)</em>
      <% } %>
    </div>
      <h4>Mitgliederbeteiligung</h4>
      <p><%= participation %></p>

      <h4>Maximale Mitgliederzahl:</h4>
      <ul><li><%= maximum_members %></li></ul>
    </li>
  <% } %>

  <li id="contact">
    <div class="membership-info">
      <% if (accepts_new_members == "yes") { %>
        <em>Wir nehmen neue Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "no") { %>
        <em>Wir nehmen derzeit keine neuen Mitglieder auf!</em>
      <% } %>
      <% if (accepts_new_members == "waitlist") { %>
        <em>Wir nehmen neue Mitglieder auf! (Warteliste)</em>
      <% } %>
      <% if (type == "Farm") { %>
        <a class="call-to-action" href="#">Informationen zur Mitgliedschaft</a>
      <% } %>
    </div>

    <h4 style="display:none">Kontakt</h4>
    <strong><%= contact_name %></strong>
    <div>Telefon: <%= contact_phone %></div>
    <br />
    <div id="place-message-form-container"></div>
  </li>
</ul>

<hr/>

<p>Letzte Aktualisierung: <%= timeago(updated_at) %></p>
<a class="close-reveal-modal">×</a>
