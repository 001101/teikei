.row
  %a.brand{href: '/'}
    %h1
      = t('application_title', default: 'Application title')
  #user
    %ul.inline-list.user-menu
      - if user_signed_in?
        %li
          = link_to t('.sign_out', default: 'Sign out'), destroy_user_session_path, method: 'delete', title: t('.sign_out_title', default: 'Click here to sign out.')
      - else
        %li
          = link_to t('.sign_in', default: 'Sign in'), new_user_session_path, id: 'signin', title: t('.sign_in_title', default: 'Click here to sign in with an existing account.')
      - if user_signed_in?
        %li
          = link_to t('.edit_user', default: 'Edit account'), edit_user_registration_path, title: t('.edit_user_title', default: 'Click here to edit your account.')
      - else
        %li
          = link_to t('.sign_up', default: 'Sign up'), new_user_registration_path, id: 'signup', title: t('.sign_up_title', default: 'Click here to sign up for a new account.')

    %ul.action-menu

