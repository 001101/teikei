.container
  %article.content
    %h2= t('.title', default: "Forgot your password?")
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        = f.email_field :email
      %div= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), :class => 'button'
  = render "devise/shared/links"
