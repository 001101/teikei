.container
  .row
    %h2= t('.title', :default => "Sign up")
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.label :name
        %br/
        = f.text_field :name
      %div
        = f.label :email
        %br/
        = f.email_field :email
      %div
        = f.label :phone
        %br/
        = f.text_field :phone
      %div
        = f.label :password
        %br/
        = f.password_field :password
      %div
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      %p
        Mit deiner Registrierung akzeptierst du die
        = link_to t('.terms_menu_item', default: ' Nutzungsbedingungen'), terms_path, title: t('.terms_menu_item_title', default: 'Click here to review the terms and conditions.')
        dieser Plattform.

      %div= f.submit t('.submit', :default => "Sign up"), class: 'button'
    = render "devise/shared/links"
