<div class="messages"></div>
<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert-box <%= name == 'notice' ? 'success' : 'alert' %>"></div>
        <a class="close" data-dismiss="alert">Ã—</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
<% end %>